<div class="login_box">

<%= form_for @user, url: '/login' do |f| %>
    <div>
    <%= f.label :username %>
    <%= f.text_field :username %><br />
    </div>
  
    <div>
    <%= f.label :password %>
    <%= f.password_field :password %><br />
    </div>
  
    <%= f.submit "Log In" %>
<% end %>

<br />

<%= link_to 'Login with Facebook', '/auth/facebook', class: "fb_button" %>

</div>